<table class="bordered">
  <thead>
    <tr>
      <th>Order No</th>
      <th>Status</th>
      <th>#</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.status %></td>
      <td><%= link_to '訂單明細', order_path(order) %></td>
    </tr>
  <% end %>
</table>